<Window x:Class="PasswordStats.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PasswordStats" Height="418" Width="641" AllowsTransparency="False" WindowStyle="SingleBorderWindow" Background="AliceBlue">
    <Grid>
        <Button x:Name="SelectFile" Content="Select File" Height="27" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Margin="12,8,0,0" Click="SelectFile_Click" />
        <TextBox x:Name="Output" Margin="12,41,17,12" VerticalScrollBarVisibility="Visible" />
        <Button Height="27" HorizontalAlignment="Left" Margin="137,8,0,0" Name="clipboard" VerticalAlignment="Top" Width="106" Click="Clipboard_Click">Copy to Clipboard</Button>
        <Button Height="27" HorizontalAlignment="Right" Margin="0,8,17,0" Name="close" VerticalAlignment="Top" Width="83" Click="Close_Click">Close</Button>
        <Button Height="27" HorizontalAlignment="Left" Margin="255,8,0,0" x:Name="save" VerticalAlignment="Top" Width="106" Click="Save_Click" Content="Save to File"/>
    </Grid>
</Window>
